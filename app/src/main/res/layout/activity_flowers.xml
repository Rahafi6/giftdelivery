<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="@drawable/backpage"
    tools:context=".Flowers">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="city > girt >f lowers" />

    <Button
        android:id="@+id/Tex_chf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="chose flowers you like?" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/app_name" >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <ImageView
                    android:id="@+id/Img_pink"
                    android:layout_width="215dp"
                    android:layout_height="177dp"
                    android:src="@drawable/fpink" />

                <ImageView
                    android:id="@+id/Img_blue"
                    android:layout_width="188dp"
                    android:layout_height="177dp"
                    android:src="@drawable/fblue" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <Button
                    android:id="@+id/But_pink"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pink: 200SR" />

                <Button
                    android:id="@+id/But_blue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Blue: 125 SR" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <ImageView
                    android:id="@+id/Img_color"
                    android:layout_width="100dp"
                    android:layout_height="177dp"
                    android:src="@drawable/fwhite" />

                <ImageView
                    android:id="@+id/Img_red"
                    android:layout_width="105dp"
                    android:layout_height="177dp"
                    android:src="@drawable/fred" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <Button
                    android:id="@+id/But_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="White: 260 SR" />

                <Button
                    android:id="@+id/But_red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Red: 300 SR" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <ImageView
                    android:id="@+id/imageView16"
                    android:layout_width="165dp"
                    android:layout_height="177dp"
                    android:src="@drawable/fpur" />

                <ImageView
                    android:id="@+id/Img_org"
                    android:layout_width="74dp"
                    android:layout_height="177dp"
                    android:padding="10dp"
                    android:src="@drawable/forg" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <Button
                    android:id="@+id/But_pur"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="purple: 210 SR" />

                <Button
                    android:id="@+id/But_org"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Orange: 230 SR" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <ImageView
                    android:id="@+id/Img_yellow"
                    android:layout_width="165dp"
                    android:layout_height="177dp"
                    android:src="@drawable/fyellow" />

                <ImageView
                    android:id="@+id/Img_sky"
                    android:layout_width="62dp"
                    android:layout_height="177dp"
                    android:src="@drawable/fsky" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <Button
                    android:id="@+id/But_yellow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="yellow: 270 SR" />

                <Button
                    android:id="@+id/But_sky"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="skyblue: 190 SR" />
            </TableRow>
        </TableLayout>
    </ScrollView>
</LinearLayout>