<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layoutDescription="@xml/activity_one_scene"
    android:background="@drawable/backpage"
    tools:context=".one">

    <TextView
        android:id="@+id/Text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="353dp"
        android:text="city>gift" />

    <Button
        android:id="@+id/button6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="chose gift" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/app_name">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/Img_rose"
                    android:layout_width="200dp"
                    android:layout_height="230dp"
                    android:src="@drawable/flower" />

                <Button
                    android:id="@+id/Tex_frose"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="100dp"
                    android:text="@string/title_activity_flowers" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/Img_cake"
                    android:layout_width="200dp"
                    android:layout_height="230dp"
                    android:src="@drawable/cake" />

                <Button
                    android:id="@+id/Tex_cakes"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="100dp"
                    android:text="cakes"

                    />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/Img_jwelry"
                    android:layout_width="250dp"
                    android:layout_height="230dp"
                    android:src="@drawable/accessf" />

                <Button
                    android:id="@+id/Tex_jewelry"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="100dp"
                    android:text="jewelry" />
            </TableRow>
        </TableLayout>
    </ScrollView>

</LinearLayout>